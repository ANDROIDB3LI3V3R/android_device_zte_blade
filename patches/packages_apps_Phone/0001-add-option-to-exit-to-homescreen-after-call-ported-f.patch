         Log.d(LOG_TAG, msg);
     }
+
+    protected void updateSettings() {
+        SharedPreferences callsettings = PreferenceManager.getDefaultSharedPreferences(this);
+        mExitToHomeScreen = callsettings.getBoolean(BUTTON_EXIT_TO_HOMESCREEN_KEY, false);
+    }
 }
